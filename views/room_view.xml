<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="room_view_tree" model="ir.ui.view">
      <field name="name">room.view.tree</field>
      <field name="model">gestion_reservations.room</field>
      <!-- <field name="model">tree</field> -->
      <field name="arch" type="xml">
        <tree string="Rooms list">
          <field name="id_room" invisible = '1' />
          <field name="room_number" />
          <field name="room_amount" />
          <field name="capacity" />
          <field name="image" />
          <field name="room_tel" />
          <field name="state" />
          <field name="types" />
          <!-- <field name="id_customer" invisible="1" />
          <field name="id_reservation" invisible="1" />  -->
          <field name="id_hotel" />
        </tree>
      </field>
    </record>

    <!-- vue kanban -->

    <record id="room_view_kanban" model="ir.ui.view">
      <field name="name">room.view.kanban</field>
      <field name="model">gestion_reservations.room</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id_room" invisible = '1' />
          <field name="room_number"/>
          <field name="room_amount" />
          <field name="capacity" />
          <field name="image" />
          <field name="room_tel" />
          <field name="state" />
          <field name="types" />

          <templates>
            <t t-name="kanban-box">
              <div class="o_kanban_card">
                <div class="o_kanban_card_header">

                  <div class="o_kanban_card_title">
                    <field name="room_number"/>
                 </div>

                  <div class="o_kanban_card_subtitle">
                    <field name="room_amount"/>
                  </div>

                  <div class="o_kanban_card_subtitle">
                    <field name="capacity"/>
                  </div>

                  <div class="o_kanban_card_subtitle">
                    <field name="room_tel"/>
                  </div>

                  <div class="o_kanban_card_subtitle">
                    <field name="state"/>
                  </div>

                  <div class="o_kanban_card_subtitle">
                    <field name="types"/>
                  </div>

                </div>

                <div class="o_kanban_card_footer">
                  <button class="btn btn-primary">Réserver</button>
                </div>
              </div>

            </t>
          </templates>
        </kanban>
      </field>
    </record>


    <!-- Vue formulaire chambre -->

    <record id="reservation_view_form" model="ir.ui.view">
      <field name="name">room.view.form</field>
      <field name="model">gestion_reservations.room</field>
      <field name="arch" type="xml">
                <form string="hotel form">
                        <group>
                            <group name="name" string="Infos">
                                <field name="id_room" invisible = '1' />
                                <field name="room_number" />
                                <field name="room_tel" />
                            </group>
                            <group name="name" string="réservation">
                                <field name="types" />
                                <field name="capacity" />
                                <field name="image" widget="image" />
                                <field name="room_amount" /> 
                                <field name="state" />  
                            </group>
                        </group>
                </form>
      </field>

    </record>

    <!-- Action à effectuer sur les chambres -->

    <record id="room_action" model="ir.actions.act_window">
      <field name="name">Chambres</field>
      <field name="res_model">gestion_reservations.room</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>


  </data>
</odoo>