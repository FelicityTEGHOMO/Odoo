<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <!-- Vue liste des hotels -->

        <record id="hotel_view_tree" model="ir.ui.view">
            <field name="name">hotel.list.tree</field>
            <field name="model">gestion_reservations.hotel</field>
            <field name="arch" type="xml">
                <tree string="hotel list">
                    <field name="id_hotel" />
                    <field name="image" />
                    <field name="name_hotel" />
                    <field name="description" />
                    <field name="tel_hotel" />
                    <field name="adresse_hotel" />
                    <field name="ville" />
                    <field name="id_room" />
                    <!-- <field name="hotel_room_count" /> -->
                </tree>
            </field>
        </record>

        <!-- Vue formaulaire des hotels -->

        <record id="hotel_view_form" model="ir.ui.view">
            <field name="name">hotel.view.form</field>
            <field name="model">gestion_reservations.hotel</field>
            <field name="arch" type="xml">
                <form string="hotel form">
                    <sheet>
                        <group>
                            <group>
                                <field name="id_hotel" invisible='1'/>
                                <field name="image" widget="image" />
                                <field name="name_hotel" />
                                <field name="description" />
                                <field name="adresse_hotel" />  
                                <field name="tel_hotel" />
                                <field name="ville" />
                            </group>
                            <group>
                                <field name="id_room" />
                            </group>
                        </group>

                            
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action Ã  effectuer sur les chambres -->

        <record id="hotel_action" model="ir.actions.act_window">
            <field name="name">Hotels</field>
            <field name="res_model">gestion_reservations.hotel</field>
            <field name="view_mode">tree,form</field>
        </record>


    
    </data>
    
</odoo>