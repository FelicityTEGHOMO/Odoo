<odoo>
    <data>


        <!-- Template hotel -->

        <template id="template_hotels" name="Liste des hôtels">
            <t t-call="website.layout">
                <!-- <link rel="stylesheet" href="/gestion_reservations/static/src/css/hotel.css"/> -->
                <h2 style="display: flex; justify-content: center; font-weight: bold;">Liste des hôtels</h2> <br/>
                <div class="container">
                    <div class="row">
                        <t t-foreach="hotels" t-as="hotel">
                            <div class="col-md-6">
                                <div class="card">
                                    <form action="/chambres" method="POST">
                                        <div class="card-header"> 
                                            <h5 class="card-title" style="white-space: nowrap">Nom de l'hôtel: <t t-esc="hotel.name_hotel"/></h5>
                                        </div>
                                        <!-- <img t-att-src="hotel.image_url" alt="hotel image" class="card-img-top"/> -->
                                        <div class="card-body">
                                            <p class="card-text">Description de l'hôtel: <t t-esc="hotel.description"/></p>
                                            <p class="card-text">Téléphone de l'hôtel:  <t t-esc="hotel.tel_hotel"/> </p>
                                            <p class="card-text">Adresse de l'hôtel: <t t-esc="hotel.adresse_hotel"/></p>
                                            <p class="card-text">Ville de l'hôtel: <t t-esc="hotel.ville"/></p>
                                        </div>
                                        <div class="card-footer">
                                            <a class="btn btn-primary" href="/chambres">Voir les chambres</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>

                <t t-if="not hotels">
                    <div>
                        <p>Aucun hôtel à afficher pour le moment.</p>
                    </div>
                </t>
            </t>

        </template>


        <!-- Template chambres -->

        <template id="template_chambres" name="Liste des chambres">
            <t t-call="website.layout">
                <h2 style="display: flex; justify-content: center; font-weight: bold">Liste des chambres</h2> <br/>
                <div class="container">
                    <div class="row">
                        <t t-foreach="chambres" t-as="chambre">
                            <div class="col-md-4">
                                <div>
                                    <form action="/reserver" method="POST">
                                        <div class="card">
                                            <!-- <img t-att-src="hotel.image_url" alt="hotel image" class="card-img-top"/> -->
                                            <div class="card-body">
                                                <input type="hidden" name="room_reserve" t-att-value="chambre.id"/>
                                                <h5 class="card-title"> <strong>Numéro de chambre:</strong></h5><t t-esc="chambre.room_number"/>
                                                <p class="card-text d-flex justify-content-between align-items-center">Prix de la chambre: <t t-esc="chambre.room_amount"/> FCFA</p>
                                                <p class="card-text">Téléphone de la chambre: </p> <t t-esc="chambre.room_tel"/>
                                                <p class="card-text">Disponibilité: <t t-esc="chambre.state"/></p>
                                                <p class="card-text">Capacité: <t t-esc="chambre.capacity"/></p>
                                                <p class="card-text">Type: <t t-esc="chambre.types"/></p>
                                                <div class="btn-group">
                                                </div>
                                                <button class="btn btn-primary book-now" type="submit"> Réserver</button>
                                            </div>
                                        
                                        </div>
                                    </form>
                                </div>
                            </div>
                    </t>
                </div>
                </div>

                <t t-if="not chambres">
                    <div>
                        <p>Aucune chambre à afficher pour le moment.</p>
                    </div>
                </t>
            </t>

        </template>
      

        <!-- template qui affiche les chambres d'un hotel -->

        <template id="hotel_chambre_template" name="chambres d'un hôtel" >
                <t t-call="website.layout">
                    <div class="container">
                        <h1>Chambres de l'hôtel</h1>
                        <div class="row">
                            <t t-foreach="chambres" t-as="chambre">
                                <div class="col-md-4">
                                    <form action="/hotel/chambres" method="POST">
                                        <div class="card">
                                            <div class="card-header">
                                                <h4 class="card-title"><t t-esc="chambre.room_number"/></h4>
                                            </div>
                                            <div class="card-body">
                                                <input type="hidden" name="hotel_rooms" t-att-value="id_hotel"/>
                                                <h5 class="card-title"> <strong>Numéro de chambre:</strong><t t-esc="chambre.room_number"/> </h5>
                                                <p class="card-text d-flex justify-content-between align-items-center">Prix de la chambre: <t t-esc="chambre.room_amount"/> FCFA</p>
                                                <p class="card-text">Téléphone de la chambre:  <t t-esc="chambre.room_tel"/></p>
                                                <p class="card-text">Disponibilité: <t t-esc="chambre.state"/></p>
                                                <p class="card-text">Capacité: <t t-esc="chambre.capacity"/></p>
                                                <p class="card-text">Type: <t t-esc="chambre.types"/></p>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </t>
                        </div>
                    </div>
                </t>
        </template>
    </data>
</odoo>
