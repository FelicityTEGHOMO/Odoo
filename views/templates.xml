    <template id="template_hotels" name="Liste des hôtels">
        <t t-call="website.layout">
            <link rel="stylesheet" href="/gestion_reservations/static/src/css/hotel.css"/>
            <t t-foreach="hotels" t-as="hotel">
                <div class="col-md-4">
                    <div class="card">
                        <!-- <img t-att-src="hotel.image_url" alt="hotel image" class="card-img-top"/> -->
                        <div class="card-body">
                            <h5 class="card-title" style="white-space: nowrap">Nom de l'hôtel:</h5><t t-esc="hotel.name_hotel"/>
                            <p class="card-text">Description de l'hôtel: <t t-esc="hotel.description"/></p>
                            <p class="card-text">Téléphone de l'hôtel: </p> <t t-esc="hotel.tel_hotel"/>
                            <p class="card-text">Adresse de l'hôtel: <t t-esc="hotel.adresse_hotel"/></p>
                            <p class="card-text">Ville de l'hôtel: <t t-esc="hotel.ville"/></p>
                        </div>
                    </div>
                </div>
            </t>
            <t t-if="not hotels">
                <div>
                    <p>Aucun hôtel à afficher pour le moment.</p>
                </div>
            </t>
        </t>

    </template>


      <!-- Template chambres -->

      <template id="template_chambres" name="Liste des chambres">
          <link rel="stylesheet" href="/gestion_reservations/static/src/css/chambre.css"/>
          <t t-if="chambres">
              <div>
                  <table>
                      <thead>
                          <tr>
                              <th>Numéro de chambre</th>
                              <th>Prix de la chambre</th>
                              <th>Téléphone de la chambre</th>
                              <th>Type de la chambre</th>
                              <th>
                                  <t t-if="disponible">Disponible</t>
                                  <t t-if="not disponible">Indisponible</t>
                              </th>
                          </tr>
                      </thead>
                      <tbody>
                          <t t-foreach="chambres" t-as="chambre">
                              <tr>
                                  <td><t t-esc="chambre.room_number"/></td>
                                  <td><t t-esc="chambre.room_amount"/></td>
                                  <td><t t-esc="chambre.room_tel"/></td>
                                  <td><t t-esc="chambre.types"/></td>
                                  <td><t t-esc="chambre.disponible"/></td>
                              </tr>
                          </t>
                      </tbody>
                  </table>
              </div>
          </t>
          <t t-if="not chambres">
              <div>
                  <p>Aucune chambre à afficher pour le moment.</p>
              </div>
          </t>
      </template>

      <!-- Template réserver -->

      <template id="template_reservations" name="Liste des réservations">
        <record id="reservation_view_form" model="ir.ui.view">
            <field name="name">reservation.view.form</field>
            <field name="model">gestion_reservations.reservation</field>
                <field name="arch" type="xml">
                    <form string="Contact Us">
                        <group>
                            <field name="name" required="1"/>
                            <field name="email" required="1"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="subject"/>
                            <field name="message" widget="html"/>
                        </group>
                        <footer>
                            <button name="send_email" string="Send"/>
                        </footer>
                    </form>
                </field>
            </record>


