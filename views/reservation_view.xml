<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
    
    <!-- Vue liste reservation -->

        <record id="room_view_list" model="ir.ui.view">
            <field name="name">Reservation</field>
            <field name="model">gestion_reservations.reservation</field>
            <field name="arch" type="xml">
                <tree string="Reservations list">
                <field name="id_reservation" invisible='1' />
                <field name="first_name" />
                <field name="last_name" />
                <field name="email" />
                <field name="country" />
                <field name="phone" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="total_price" />
                <field name="id_room" />
                <!-- <field name="room_number" /> -->
                </tree>
            </field>
        </record>

        <!-- Vue formulaire reservation -->

        <record id="reservation_view_form" model="ir.ui.view">
            <field name="name">reservation.view.form</field>
            <field name="model">gestion_reservations.reservation</field>
            <field name="arch" type="xml">
                    <form string="reservation form">
                        <group>
                            <group name="name" string="Infos">
                                <field name="id_reservation" invisible="1"/>
                                <field name="id_room" required="1"/>
                                <field name="last_name" required="1"/>
                                <field name="first_name" required="1"/>
                                <field name="email" required="0"/>
                            </group>
                            <group name="name" >
                                <field name="phone" required="1"/>
                                <field name="start_date" required="1"/>
                                <field name="end_date" required="1"/>
                                <field name="cancellation_policy" />
                                <field name="cool" invisible="1"/>
                            </group>
                        </group>
                    </form>
            </field>

        </record>

        <!-- Action à effectuer sur la réservation-->

        <record id="reservation_action" model="ir.actions.act_window">
        <field name="name">Réservations</field>
        <field name="res_model">gestion_reservations.reservation</field>
        <field name="view_mode">tree,form</field>
        </record>
    
    </data>
    
</odoo>